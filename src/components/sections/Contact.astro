---
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
import { Card } from '@/components/ui/card';
---

<section id="contact" class="container px-4 py-24 md:px-6">
  <div class="mx-auto flex max-w-[58rem] flex-col items-center space-y-4 text-center">
    <h2 class="font-bold text-3xl leading-[1.1] sm:text-3xl md:text-6xl">
      Contact Us
    </h2>
    <p class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7">
      Get in touch with our team
    </p>
  </div>
  <Card class="mx-auto max-w-[500px] mt-16">
    <div class="p-6">
      <h3 class="text-2xl font-semibold mb-4">Send us a message</h3>
      <form class="space-y-4">
        <div class="space-y-2">
          <Input placeholder="Name" />
        </div>
        <div class="space-y-2">
          <Input placeholder="Email" type="email" />
        </div>
        <div class="space-y-2">
          <Textarea placeholder="Message" />
        </div>
        <Button class="w-full">Send Message</Button>
      </form>
    </div>
  </Card>
</section>
