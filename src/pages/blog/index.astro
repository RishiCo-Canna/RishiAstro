---
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => {
  return import.meta.env.DEV || !data.draft;
});

// Render each post's content
const renderedPosts = await Promise.all(
  posts.map(async (post) => {
    const { Content } = await post.render();
    return { ...post, Content };
  })
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Blog Posts</title>
  </head>
  <body class="max-w-prose mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Blog Posts</h1>
    <ul class="space-y-4">
      {renderedPosts.map(({ data, Content }) => (
        <li class="border rounded-lg p-4">
          <h2 class="text-2xl font-semibold mb-2">{data.title}</h2>
          {data.publishDate && (
            <p class="text-gray-600 mb-2">
              {data.publishDate.toLocaleDateString()}
            </p>
          )}
          <div class="prose">
            <Content />
          </div>
        </li>
      ))}
    </ul>
  </body>
</html>